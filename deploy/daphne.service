[Unit]
Description=Daphne ASGI Server for KitchenBook (WebSocket support)
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/KitchenBook/backend
Environment="DJANGO_SETTINGS_MODULE=config.settings"
ExecStart=/home/ubuntu/KitchenBook/venv/bin/daphne \
    -u /home/ubuntu/KitchenBook/backend/daphne.sock \
    -b 127.0.0.1 \
    -p 8001 \
    config.asgi:application
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
